<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:layout_width="fill_parent">
    
    <include 
	layout="@layout/header_inc"
	android:id="@+id/header_inc"
	android:layout_width="fill_parent" 
	android:layout_height="50px" /> 
    
    <RelativeLayout
	android:id="@+id/data_page_main"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:layout_below="@id/header_inc"
	android:background="@drawable/main_background" >
		
	<TextView
	    android:id="@+id/data_page_heading"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:textSize="22dp"
	    android:textColor="@color/font_color_standard"
	    android:paddingLeft="18dp"
	    android:paddingRight="18dp"
	    android:paddingTop="10dp"
	    android:paddingBottom="10dp"
	/>

	    <RelativeLayout
		android:id="@+id/data_page_date_flood"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_below="@id/data_page_heading"
		android:paddingLeft="18dp"
		android:paddingRight="18dp" >
		
		<TextView
		    android:id="@+id/data_page_date"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@color/font_color_highlight"
		    android:textSize="14dp"
		    />
		<TextView
		    android:id="@+id/data_page_flood"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:textColor="@color/font_color_highlight"
		    android:textSize="14dp"
		    android:textStyle="bold"
		    />
	    </RelativeLayout>

	    <RelativeLayout
		android:id="@+id/data_page_flow"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_below="@id/data_page_date_flood"
		android:paddingLeft="18dp"
		android:paddingRight="18dp" >

		<TextView
		    android:id="@+id/data_page_height"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@color/font_color_highlight"
		    android:textSize="30dp"
		/>
		<TextView
		    android:id="@+id/data_page_volume"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:textColor="@color/font_color_highlight"
		    android:textSize="30dp"
		/>
	    </RelativeLayout>

	    <RelativeLayout
		android:id="@+id/data_chart"
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:layout_below="@id/data_page_flow" >
		
		<TextView
		    android:id="@+id/data_page_loading"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerInParent="true"
		    android:textSize="25dp"
		    android:textColor="@color/font_color_standard"
		    />
		    
	    </RelativeLayout>


    </RelativeLayout>
    
    
    
</RelativeLayout>
